@using Auth.Web.UI.Config
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["ResetPasswordConfirmation"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "My Super Company";
}

<div>
    <h1 class="page-title">@ViewBag.Title</h1>
    <br />
    <br />
    <p>
        @Html.Raw(string.Format(Localizer["YourPasswordHasBeenReset"].Value, HtmlContentExtend.GetString(Html.ActionLink(Localizer["ClickHereToLogIn"].Value, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }))))
    </p>
</div>
